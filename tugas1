#include <iostream> // Define iostream
using namespace std; // menggunakan std
int main()
{
    int JumDetik;
    int Jam;
    int Menit;
    int Detik;
    int Sisa;

    cout<<"Berapa detik tong? "<<endl;
    cin >> JumDetik;

  Jam = JumDetik / 3600;
  Sisa = JumDetik % 3600;
  Menit = Sisa / 60;
  Detik = Sisa % 60;

    cout<<"===***==="<<endl;
    cout<<Jam<<" Jam"<<endl;
    cout<<Menit<<" Menit"<<endl;
    cout<<Detik<<" Detik"<<endl;
    cout<<"===***==="<<endl;


return 0;
}
